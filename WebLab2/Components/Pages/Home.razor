@page "/"
@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation

<PageTitle>Home</PageTitle>
<MudElement id="particles-container">
    <MudElement id="particle-obj"></MudElement>
    <MudElement id="container">
    <MudElement class="content">
        <MudText Typo="Typo.h3" GutterBottom="true">Welcome to the shop!</MudText>
        <MudText Class="mb-8">Here you can buy everything from toys to clothing.</MudText>
        <MudButton OnClick="@(() => Navigation.NavigateTo("/products"))" Color="Color.Primary" Variant="Variant.Filled">
            Go To Products
        </MudButton>
    </MudElement>
    </MudElement>
</MudElement>
<style>
    #particles-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: -1;
    overflow: hidden;
}

#particle-obj {
    position: absolute;
    width: 100%;
    height: 100%;
}

#container {
    position: absolute;
    top: 20vh;
    left: 50%;
    transform: translateX(-50%);
    width: fit-content;
    text-align: center;
    z-index: 1;
}

.content {
    padding: 20px;
}
</style>
@code
{
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("particlesJS.load", "particle-obj", "particlesjs-config.json");
        }
    }
}